<%- include("../partials/header") %>


<div class='container'>
	
	<header class="jumbotron">
		<div class='container'>
		<h1>Welcome to YelpCamp!</h1>
		<p>
			View our hand-picked campgrounds from all over the world!
		</p>
		<p>
			<a class='btn btn-primary btn-lg' href="/campgrounds/new">Add A New Campground</a>
		</p>
		
		</div>
	</header>

	<div class='row'>
		
		<div class='col-lg-12'>
			
			<h3>
				Our most popular campgrounds!
			</h3>
		</div>
	</div>
	
	
	
	<div class='row text-center'>
		<ul>
		<% campgrounds.forEach(function(i) { %>
			 <div class='col-md-3 col-sm-6'> 
				 <div class='thumbnail'>
					 <img src="<%=i.image%>" width='600'/>
					 <div class='caption'>
						 <h4>
							 <%=i.name%>
						 </h4>
						 <p>
							  <a href="/campgrounds/<%=i._id%>" class='btn btn-primary' >More info!</a>
						 </p>
					 </div>
				 </div>
		        
			</div>

		<% }) %>
		</ul>
	</div>
	
	
	
	
	
</div>

<%- include("../partials/footer") %>