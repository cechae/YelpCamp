<%- include("../partials/header") %>
<div class='container'>
    <div class='row'>
        <h1 style="text-align:center; margin">
            Edit comment.
        </h1>
        
        <div style="width:30%; margin: 30px auto;">
            <form action="/campgrounds/<%=campground_id%>/comments/<%=comment._id%>?_method=PUT" method="POST">
                <div class='form-group'>
                    <input class='form-control' value="<%=comment.text%>" type="text" placeholder="text" name="comment[text]">
                </div>
                
                <div class='form-group'>
                    <button class='btn btn-default btn-lg btn-block btn-primary'>
                        Submit!
                    </button>
                </div>
            </form>
            <a href="/campgrounds"> Back </a>
        </div>

    </div>
    <%- include("../partials/footer") %>