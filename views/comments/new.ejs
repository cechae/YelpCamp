<%- include("../partials/header") %>
<div class='container'>
    <div class='row'>
        <h1 style="text-align:center; margin">
            Create A New Comment to <%= campground.name %> 
        </h1>
        
        <div style="width:30%; margin: 30px auto;">
            <form action="/campgrounds/<%=campground._id%>/comments" method="POST">
                <div class='form-group'>
                    <input class='form-control' type="text" placeholder="text" name="comment[text]">
                </div>
                <div class='form-group'>
                    <input class='form-control' type="text" placeholder="author" name="comment[author]">
                </div>
                
                <div class='form-group'>
                    <button class='btn btn-default btn-lg btn-block btn-primary'>
                        Submit!
                    </button>
                </div>
            </form>
            <a href="/campgrounds"> Back </a>
        </div>

    </div>
    <%- include("../partials/footer") %>